#include <iostream>
#define MAX 5
using namespace std;

class CircularQueue {
    int arr[MAX];
    int front, rear;
public:
    CircularQueue() {
        front = rear = -1;
    }
    bool isEmpty() {
        return front == -1;
    }
    bool isFull() {
        return ((rear + 1) % MAX == front);
    }
    void enqueue(int x) {
        if (isFull()) {
            cout << "Queue is full\n";
            return;
        }
        if (isEmpty()) {
            front = rear = 0;
        } else {
            rear = (rear + 1) % MAX;
        }
        arr[rear] = x;
    }
    int dequeue() {
        if (isEmpty()) {
            cout << "Queue is empty\n";
            return -1;
        }
        int val = arr[front];
        if (front == rear) { // Only one element
            front = rear = -1;
        } else {
            front = (front + 1) % MAX;
        }
        return val;
    }
    void display() {
        if (isEmpty()) {
            cout << "Queue is empty\n";
            return;
        }
        int i = front;
        do {
            cout << arr[i] << " ";
            i = (i + 1) % MAX;
        } while (i != (rear + 1) % MAX);
        cout << endl;
    }
};

int main() {
    CircularQueue q;
    int val, ch;
    do {
        cout << "\n1.Enqueue 2.Dequeue 3.Display 4.Exit: ";
        cin >> ch;
        switch(ch) {
            case 1: cout << "Enter value: "; cin >> val; q.enqueue(val); break;
            case 2: cout << "Dequeued: " << q.dequeue() << endl; break;
            case 3: q.display(); break;
        }
    } while(ch != 4);
    return 0;
}
