#include <iostream>
#include <cctype>
#define MAX 100
using namespace std;

class Stack {
    char arr[MAX];
    int top;
public:
    Stack() { top = -1; }
    void push(char c) { arr[++top] = c; }
    char pop() { return arr[top--]; }
    bool isEmpty() { return top == -1; }
    char peek() { return arr[top]; }
};

int precedence(char op) {
    if(op == '^') return 3;
    if(op == '*' || op == '/') return 2;
    if(op == '+' || op == '-') return 1;
    return 0;
}

void infixToPostfix(const char *exp) {
    Stack s;
    for(int i = 0; exp[i]; i++) {
        char c = exp[i];
        if(isalnum(c)) cout << c;
        else if(c == '(') s.push(c);
        else if(c == ')') {
            while(!s.isEmpty() && s.peek() != '(') cout << s.pop();
            if(!s.isEmpty()) s.pop(); // Remove '('
        }
        else {
            while(!s.isEmpty() && precedence(s.peek()) >= precedence(c))
                cout << s.pop();
            s.push(c);
        }
    }
    while(!s.isEmpty()) cout << s.pop();
    cout << endl;
}

int main() {
    char expr[MAX];
    cout << "Enter infix expression: ";
    cin >> expr;
    cout << "Postfix: ";
    infixToPostfix(expr);
    return 0;
}
