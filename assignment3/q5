#include <iostream>
#include <cctype>
#define MAX 100
using namespace std;

class Stack {
    int arr[MAX];
    int top;
public:
    Stack() { top = -1; }
    void push(int x) { arr[++top] = x; }
    int pop() { return arr[top--]; }
    bool isEmpty() { return top == -1; }
};

int evalPostfix(const char *exp) {
    Stack s;
    for(int i = 0; exp[i]; i++) {
        char c = exp[i];
        if(isdigit(c)) s.push(c - '0');
        else {
            int b = s.pop(), a = s.pop();
            switch(c) {
                case '+': s.push(a + b); break;
                case '-': s.push(a - b); break;
                case '*': s.push(a * b); break;
                case '/': s.push(a / b); break;
            }
        }
    }
    return s.pop();
}

int main() {
    char expr[MAX];
    cout << "Enter postfix expression: ";
    cin >> expr;
    cout << "Result: " << evalPostfix(expr) << endl;
    return 0;
}
