
#include <stdio.h>
#define MAX 100
char stack[MAX];
int top = -1;

int isBalanced(char *exp) {
    top = -1; 
    for(int i = 0; exp[i]; i++) {
        char c = exp[i];
        if(c == '(' || c == '{' || c == '[')
            stack[++top] = c;
        else if(c == ')' || c == '}' || c == ']') {
            if(top == -1) return 0; 
            char open = stack[top--];
            if((c == ')' && open != '(') ||
               (c == '}' && open != '{') ||
               (c == ']' && open != '['))
               return 0; 
        }
    }
    return top == -1;
}

int main() {
    char expr[MAX];

    printf("Enter expression: ");
    scanf("%s", expr); 

    if(isBalanced(expr)) 
        printf("Balanced parentheses.\n");
    else
        printf("Not balanced.\n");

    return 0;
}
