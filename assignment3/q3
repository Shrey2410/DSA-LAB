#include <iostream>
#define MAX 100
using namespace std;

class Stack {
    char arr[MAX];
    int top;
public:
    Stack() { top = -1; }
    void push(char c) { arr[++top] = c; }
    char pop() { return arr[top--]; }
    bool isEmpty() { return top == -1; }
    char peek() { return arr[top]; }
};

bool isBalanced(const char *exp) {
    Stack s;
    for(int i = 0; exp[i]; i++) {
        char c = exp[i];
        if(c == '(' || c == '{' || c == '[') s.push(c);
        else if(c == ')' || c == '}' || c == ']') {
            if(s.isEmpty()) return false;
            char open = s.pop();
            if((c == ')' && open != '(') ||
               (c == '}' && open != '{') ||
               (c == ']' && open != '[')) return false;
        }
    }
    return s.isEmpty();
}

int main() {
    char expr[MAX];
    cout << "Enter expression: ";
    cin >> expr;
    if(isBalanced(expr)) cout << "Balanced parentheses.\n";
    else cout << "Not balanced.\n";
    return 0;
}
