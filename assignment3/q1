#include <iostream>
#define MAX 100
using namespace std;

class Stack {
    int arr[MAX], top;
public:
    Stack() { top = -1; }
    void push(int x) {
        if(top == MAX-1) cout << "Overflow!\n";
        else arr[++top] = x;
    }
    int pop() {
        if(top == -1) { cout << "Underflow!\n"; return -1; }
        return arr[top--];
    }
    int peek() {
        if(top == -1) return -1;
        return arr[top];
    }
    bool isEmpty() { return top == -1; }
    bool isFull() { return top == MAX-1; }
    void display() {
        for(int i = top; i >= 0; i--) cout << arr[i] << " ";
        cout << endl;
    }
};

int main() {
    Stack s;
    int ch, x;
    do {
        cout << "1.Push 2.Pop 3.Peek 4.Display 5.Exit : "; cin >> ch;
        switch(ch) {
            case 1: cout << "Enter value: "; cin >> x; s.push(x); break;
            case 2: cout << "Popped: " << s.pop() << endl; break;
            case 3: cout << "Peek: " << s.peek() << endl; break;
            case 4: s.display(); break;
        }
    } while(ch != 5);
    return 0;
}
